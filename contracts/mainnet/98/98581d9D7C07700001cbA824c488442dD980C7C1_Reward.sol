contract Reward is
    Initializable,
    OwnableUpgradeable,
    UUPSUpgradeable,
    EIP712Upgradeable
{
    string private constant SIGNING_DOMAIN = "Ramlogics-8955";
    string private constant SIGNATURE_VERSION = "022";

    address public REWARD_CONTRACT_ADDRESS;
    uint256 public expireTime;
    address public constant NATIVE_TOKEN =
        0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;

    mapping(bytes => bool) public usedSignature;

    struct Voucher {
        address user;
        uint256 amount;
        uint256 time;
        bytes signature;
    }

    // constructor() {
    //     _disableInitializers();
    // }

    function initialize(address _rewardContract) public initializer {
        __EIP712_init(SIGNING_DOMAIN, SIGNATURE_VERSION);
        __Ownable_init();
        __UUPSUpgradeable_init();
        REWARD_CONTRACT_ADDRESS = _rewardContract;
        expireTime = 60;
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyOwner
    {}

    function redeem(Voucher calldata voucher) public {
        require(usedSignature[voucher.signature] == false, "Already Used");
        require(
            block.timestamp < voucher.time + expireTime,
            "Signatue expired"
        );
        require(
            (voucher.user == msg.sender && (_verify(voucher) == msg.sender)),
            "Unauthorized signature"
        );
        require(
            IERC20Upgradeable(REWARD_CONTRACT_ADDRESS).transfer(
                voucher.user,
                voucher.amount
            ),
            "Insufficient funds to redeem"
        );
        usedSignature[voucher.signature] = true;
    }

    function _hash(Voucher calldata voucher) internal view returns (bytes32) {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        keccak256(
                            "Voucher(address user,uint256 amount,uint256 time)"
                        ),
                        voucher.user,
                        voucher.amount,
                        voucher.time
                    )
                )
            );
    }

    function getChainID() external view returns (uint256) {
        uint256 id;
        assembly {
            id := chainid()
        }
        return id;
    }

    function _verify(Voucher calldata voucher) public view returns (address) {
        bytes32 digest = _hash(voucher);
        return ECDSAUpgradeable.recover(digest, voucher.signature);
    }

    function retrieveFund(address _tokenAddr) public onlyOwner returns (bool) {
        uint256 amount = checkBalance(_tokenAddr);
        if (NATIVE_TOKEN == _tokenAddr) {
            payable(owner()).transfer(amount);
            return true;
        }
        require(
            IERC20Upgradeable(_tokenAddr).transfer(owner(), amount),
            "Unsufficient Fund"
        );
        return true;
    }

    function checkBalance(address _tokenAddr) public view returns (uint256) {
        if (_tokenAddr == NATIVE_TOKEN) {
            return address(this).balance;
        } else {
            return IERC20Upgradeable(_tokenAddr).balanceOf(address(this));
        }
    }

    // Expire time in seconds
    function setExpireTime(uint256 _expireTime) public onlyOwner {
        expireTime = _expireTime;
    }
}
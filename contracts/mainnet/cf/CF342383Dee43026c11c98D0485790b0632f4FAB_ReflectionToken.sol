        require(_isExcluded[user]==false,"already excluded!");
        _excludedBalance[user] = balanceOf(user);
        _excluded.push(user);
        _isExcluded[user] = true;
        NAV -= _excludedBalance[user];
        _totalShare -= _userShares[user];
        _userShares[user] = 0;
    }


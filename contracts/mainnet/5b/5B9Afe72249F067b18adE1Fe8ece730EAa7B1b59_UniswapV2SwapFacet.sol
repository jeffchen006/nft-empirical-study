        address routerAddress_ = routerAddress();
        IUniswapV2Router02 uniswapV2Router = IUniswapV2Router02(routerAddress_);
        SafeERC20.safeIncreaseAllowance(
            IERC20(inputToken),
            routerAddress_,
            inputAmount

contract VaultImplementation is IVaultImplementation, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using SafeCast for uint256;

    /// @custom:oz-upgrades-unsafe-allow state-variable-immutable state-variable-assignment
    address private immutable __self = address(this);
    uint256 private constant MAX_MINIMUM_DURATION = 15552000;

    bytes32 internal constant _BEACON_SLOT =
        0xa3f0ad74e5423aebfd80d3ef4346578335a9a72aeaee59ff6cb3582b35133d50;
    bytes32 internal constant _MANAGER_SLOT =
        0x25b56d42a36e6932800bdf5cc9c56e8775f5792d702c21c4ef9a0c40a93bb009;

    uint256 public netTotal;
    VaultParams private _vaultParams;
    mapping(address => UserInfo) private _userInfo;

    modifier onlyProxy() {
        require(
            address(this) != __self,
            "VI: function must be called through delegatecall"
        );
        require(
            _getImplementation() == __self,
            "VI: function must be called through active proxy"
        );
        _;
    }

    modifier onlyAdmin() {
        require(_msgSender() == _getAdmin(), "VI: only admin is allowed");
        _;
    }

    modifier onlyOrg() {
        require(_msgSender() == _getOrg(), "VI: only org is allowed");
        _;
    }

    modifier onlyOrgOrAdmin() {
        require(
            _msgSender() == _getOrg() || _msgSender() == _getAdmin(),
            "VI: only org or admin is allowed"
        );
        _;
    }

    modifier onlyManager() {
        require(_msgSender() == _getManager(), "VI: only manager is allowed");
        _;
    }

    modifier onlyNotObsolete() {
        require(!_vaultParams.isObsolete, "VI: only not obsolete");
        _;
    }

    modifier onlyNotPaused() {
        require(!_paused(), "VI: only not paused");
        _;
    }

    function deposit(
        uint256 amount
    ) external override onlyProxy onlyNotObsolete onlyNotPaused nonReentrant {
        address caller = _msgSender();
        require(
            amount + _userInfo[caller].balance >= _vaultParams.minimumAmount,
            "VI: insufficient amount"
        );
        netTotal += amount;
        _userInfo[caller].balance += amount.toUint224();
        if (_userInfo[caller].startingTimestamp == 0) {
            _userInfo[caller].startingTimestamp = _getTime();
        }
        _safeTransferFrom(caller, address(this), amount);

        emit Deposited(caller, amount);
    }

    function withdraw(
        uint256 amount
    ) external override onlyProxy onlyNotPaused nonReentrant {
        address caller = _msgSender();
        if (_vaultParams.minimumDuration > 0) {
            uint256 elapsedTime = block.timestamp -
                _userInfo[caller].startingTimestamp;
            require(
                elapsedTime >= _vaultParams.minimumDuration,
                "VI: too soon"
            );
        }
        uint256 initialAmount = _userInfo[caller].balance;
        require(amount <= initialAmount, "VI: invalid amount");
        netTotal -= amount;
        _userInfo[caller].balance -= amount.toUint224();
        if (_userInfo[caller].balance == 0) {
            delete _userInfo[caller];

            emit AccountExited(caller);
        }
        _safeTransfer(caller, amount);

        emit Withdrawn(caller, amount);
    }

    function claimFees()
        external
        override
        onlyProxy
        onlyOrgOrAdmin
        onlyNotPaused
        nonReentrant
    {
        uint256 netAmount = getVaultBalance() - netTotal;
        if (netAmount > 0) {
            uint256 performanceFee = (getPerformanceFeeRate() * netAmount) /
                10000;
            if (performanceFee > 0) {
                _safeTransfer(_getAdmin(), performanceFee);
            }
            uint256 orgClaimedAmount = netAmount - performanceFee;
            _safeTransfer(_getOrg(), orgClaimedAmount);
            emit FeesClaimed(
                _getOrg(),
                orgClaimedAmount,
                _getAdmin(),
                performanceFee
            );
        }
    }

    /**
     * @dev Retrieves the ERC20 `token` accidentally sent to a vault.
     */
    function retrieveERC20Tokens(
        address token
    ) external override onlyProxy onlyAdmin nonReentrant {
        require(token != _getToken(), "VI: invalid token address");
        uint256 balance = IERC20(token).balanceOf(address(this));
        require(balance > 0, "VI: insufficient balance");
        IERC20(token).safeTransfer(_getAdmin(), balance);

        emit ERC20TokenRetrieved(token, balance);
    }

    function emergencyWithdraw() external override onlyProxy nonReentrant {
        require(
            _vaultParams.isEmergencyWithdrawAllowed,
            "VI: not allowed to withdraw"
        );
        address caller = _msgSender();
        uint256 amount = _userInfo[caller].balance;
        netTotal -= amount;
        delete _userInfo[caller];
        _safeTransfer(caller, amount);

        emit EmergencyWithdrawn(address(this), caller, amount);
    }

    function setMinimumDuration(
        uint256 _duration
    ) external override onlyProxy onlyOrg {
        require(_duration > 0, "VI: invalid minimum duration");
        require(
            _duration < MAX_MINIMUM_DURATION,
            "VI: invalid minimum duration"
        );
        uint256 oldDuration = _vaultParams.minimumDuration;
        _vaultParams.minimumDuration = _duration.toUint32();

        emit MinimumDurationSet(oldDuration, _vaultParams.minimumDuration);
    }

    function setMinimumAmount(
        uint256 _minAmount
    ) external override onlyProxy onlyOrg {
        require(_minAmount > 0, "VI: invalid amount");
        uint256 oldMin = _vaultParams.minimumAmount;
        _vaultParams.minimumAmount = _minAmount.toUint104();

        emit MinimumAmountSet(oldMin, _vaultParams.minimumAmount);
    }

    function setLevelInfo(
        uint256 _levelTwoAmount,
        uint256 _levelThreeAmount
    ) external override onlyProxy onlyOrg {
        require(
            _levelTwoAmount >= (_vaultParams.minimumAmount * 120) / 100,
            "VI: at least 20% higher"
        );
        require(
            _levelThreeAmount == 0 ||
                _levelThreeAmount >= (_levelTwoAmount * 120) / 100,
            "VI: at least 20% higher"
        );
        _vaultParams.levelTwoAmount = _levelTwoAmount.toUint128();
        _vaultParams.levelThreeAmount = _levelThreeAmount.toUint128();

        emit LevelInfoSet(_levelTwoAmount, _levelThreeAmount);
    }

    function toggleEmergencyWithdraw() external override onlyOrgOrAdmin {
        _vaultParams.isEmergencyWithdrawAllowed = !_vaultParams
            .isEmergencyWithdrawAllowed;

        emit EmergencyWithdrawToggled(_vaultParams.isEmergencyWithdrawAllowed);
    }

    function toggleGrandParentingStatus() external override onlyOrg {
        _vaultParams.isGrandParentingOn = !_vaultParams.isGrandParentingOn;

        emit GrantParentingStatusToggled(_vaultParams.isGrandParentingOn);
    }

    function setVaultObsolete() external override onlyProxy onlyOrg {
        require(!_vaultParams.isObsolete, "VI: already obsolete");
        _vaultParams.isObsolete = true;

        emit ObsoleteStatusSet();
    }

    function getVaultParams()
        external
        view
        override
        onlyProxy
        returns (VaultParams memory)
    {
        return _vaultParams;
    }

    function getVaultInfo()
        external
        view
        override
        onlyProxy
        returns (IVaultProxyManager.VaultInfo memory)
    {
        return IVaultProxyManager(_getManager()).getVaultInfo(address(this));
    }

    function getUserInfo(
        address account
    ) external view override onlyProxy returns (UserInfo memory) {
        return _userInfo[account];
    }

    function getDepositedAmount(
        address account
    ) external view override onlyProxy returns (uint256) {
        return _userInfo[account].balance;
    }

    function pendingYieldToClaim()
        external
        view
        override
        onlyProxy
        returns (uint256)
    {
        return getVaultBalance() - netTotal;
    }

    function getPerformanceFeeRate()
        public
        view
        override
        onlyProxy
        returns (uint256)
    {
        return IVaultProxyManager(_getManager()).feeRate();
    }

    function getVaultBalance()
        public
        view
        override
        onlyProxy
        returns (uint256)
    {
        return IERC20(_getToken()).balanceOf(address(this));
    }

    function balanceOf(
        address account
    ) external view override onlyProxy returns (uint256) {
        return IERC20(_getToken()).balanceOf(account);
    }

    function getSystemInfo()
        external
        view
        override
        onlyProxy
        returns (SystemInfo memory)
    {
        return
            SystemInfo({
                org: _getOrg(),
                token: _getToken(),
                beacon: _getBeacon(),
                admin: _getAdmin(),
                manager: _getManager()
            });
    }

    function getVaultName()
        external
        view
        override
        onlyProxy
        returns (string memory)
    {
        return _getVaultName();
    }

    function _safeTransfer(address to, uint256 amount) private {
        IERC20(_getToken()).safeTransfer(to, amount);
    }

    function _safeTransferFrom(
        address from,
        address to,
        uint256 amount
    ) private {
        IERC20(_getToken()).safeTransferFrom(from, to, amount);
    }

    function _paused() private view returns (bool) {
        return IVaultProxyManager(_getManager()).paused();
    }

    function _getTime() private view returns (uint32) {
        return block.timestamp.toUint32();
    }

    function _getVaultName() private view returns (string memory) {
        return
            IVaultProxyManager(_getManager()).getVaultInfo(address(this)).name;
    }

    /**
     * @dev Returns the implementation contract address.
     */
    function _getImplementation() private view returns (address) {
        return IBeacon(_getBeacon()).implementation();
    }

    /**
     * @dev Returns the beacon address.
     */
    function _getBeacon() private view returns (address) {
        return StorageSlot.getAddressSlot(_BEACON_SLOT).value;
    }

    /**
     * @dev Returns the admin address.
     */
    function _getAdmin() private view returns (address) {
        return IVaultProxyManager(_getManager()).admin();
    }

    /**
     * @dev Returns the org address of business owner.
     */
    function _getOrg() private view returns (address) {
        return IVaultProxyManager(_getManager()).org(address(this));
    }

    /**
     * @dev Returns the vault proxy manager smart contract address.
     */
    function _getManager() private view returns (address) {
        return StorageSlot.getAddressSlot(_MANAGER_SLOT).value;
    }

    /**
     * @dev Returns the supported yield generating token address.
     */
    function _getToken() private view returns (address) {
        return IVaultProxyManager(_getManager()).token(address(this));
    }

    function _msgSender() private view returns (address) {
        return msg.sender;
    }
}
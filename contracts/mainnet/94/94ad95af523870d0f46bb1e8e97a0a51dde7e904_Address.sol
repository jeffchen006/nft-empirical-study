contract DomainContract is Ownable {

    struct Detail {
        bytes32 id;
        bytes32 label;
        uint256 tokenId;
        address registrant;
        address controller;
        address resolver;
        uint256 expires;
        bytes contenthash;
        AddRecord[4] addrs;
        TextRecord[12] texts;
    }

    struct TextRecord {
        string key;
        string text;
    }

    struct AddRecord {
        uint8 coinType;
        bytes addr;
    }



    function detail(string memory name,address registrar) public view returns (Detail memory) {
        string[12] memory textKeys = ["email", "url", "com.github", "avatar", "description", "notice", "keywords", "com.discord", "com.reddit", "com.twitter", "com.telegram", "eth.ens.delegate"];
        uint8[4] memory coinTypes = [0, 2, 3, 60];

        IBaseRegistrar  base = IBaseRegistrar(registrar);
        ENS  ens = base.ens();

        bytes32 label = keccak256(bytes(name));
        uint256 tokenId = uint256(label);
        bytes32 node = keccak256(abi.encodePacked(base.baseNode(), label));
        address resolver = ens.resolver(node);
        Detail  memory detail;
        detail.id = node;
        detail.label = label;
        detail.tokenId = tokenId;
        detail.registrant = ens.owner(node);
        detail.controller = base.ownerOf(tokenId);
        detail.expires = base.nameExpires(tokenId);
        detail.resolver = resolver;
        if(resolver!=address(0)){
            IPublicResolver publicResolver = IPublicResolver(resolver);
            for (uint i = 0; i < textKeys.length; i++) {
                TextRecord memory record;
                record.key = textKeys[i];
                record.text = publicResolver.text(node, textKeys[i]);
                detail.texts[i] = record;
            }
            detail.contenthash = publicResolver.contenthash(node);
            for (uint i = 0; i < coinTypes.length; i++) {
                AddRecord memory record;
                record.coinType = coinTypes[i];
                record.addr = publicResolver.addr(node, coinTypes[i]);
                detail.addrs[i] = record;
            }
        }else{
            detail.contenthash = "";
            for (uint i = 0; i < textKeys.length; i++) {
                TextRecord memory record;
                record.key = textKeys[i];
                detail.texts[i] = record;
            }
            for (uint i = 0; i < coinTypes.length; i++) {
                AddRecord memory record;
                record.coinType = coinTypes[i];
                detail.addrs[i] = record;
            }
        }
        return detail;
    }


    function info(string memory name, uint duration, address controllerAddress) public view returns (uint, bool){
        IETHRegistrarController controller = IETHRegistrarController(controllerAddress);
        return (controller.rentPrice(name, duration), controller.available(name));
    }


}
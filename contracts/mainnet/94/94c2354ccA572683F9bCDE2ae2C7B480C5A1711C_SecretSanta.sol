		address _toAddress,
		uint256 _tokenId,
		uint256 _value
	) external onlyOwner whenPaused {
		IERC1155(_collection).safeTransferFrom(
			address(this),
			_toAddress,
			_tokenId,
			_value,
			''
		);
	}

	function pause() external onlyOwner {
		_pause();
	}

	function unpause() external onlyOwner {
		_unpause();
	}
}
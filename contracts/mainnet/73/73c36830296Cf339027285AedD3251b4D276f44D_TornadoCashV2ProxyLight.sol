}

interface ITornadoCashV2Instance {
    function token() external view returns (address);
    function denomination() external view returns (uint256);
    function deposit(bytes32 commitment) external payable;
    function withdraw(
        bytes calldata proof,
        bytes32 root,
        bytes32 nullifierHash,
        address payable recipient,
        address payable relayer,
        uint256 fee,
        uint256 refund
    ) external payable;
}

interface IinstanceRegistry {

    enum InstanceState {
        DISABLED,
        ENABLED
    }

    function instances(ITornadoCashV2Instance _tornadov2) external view returns (
        bool isERC20,
        IERC20 token,
        InstanceState state,
        uint24 uniswapPoolSwappingFee,
        uint32 protocolFeePercentage
    );
}

contract TornadoCashV2ProxyLight {
    using SafeERC20 for IERC20;
    event EncryptedNote(address indexed sender, bytes encryptedNote);

    address public governance;
    IinstanceRegistry public instanceRegistry;

    modifier onlyGovernance() {
        require(msg.sender == governance, "Not authorized");
        _;
    }

    modifier onlyInstanceRegistry() {
        require(msg.sender == address(instanceRegistry), "Not authorized");
        _;
    }

    constructor(
        address _governance,
        address _instanceRegistry
    ) public {
        governance = _governance;
        instanceRegistry = IinstanceRegistry(_instanceRegistry);
    }

    function deposit(
        ITornadoCashV2Instance _tornadov2,
        bytes32 _commitment,
        bytes calldata _encryptedNote
    ) public payable virtual {
        (bool isERC20, IERC20 token, IinstanceRegistry.InstanceState state, , ) = instanceRegistry.instances(_tornadov2);
        require(state != IinstanceRegistry.InstanceState.DISABLED, "The instance is not supported");

        if (isERC20) {
            token.transferFrom(msg.sender, address(this), _tornadov2.denomination());
        }
        _tornadov2.deposit {
            value: msg.value
        }(_commitment);
        emit EncryptedNote(msg.sender, _encryptedNote);
    }

    function withdraw(
        ITornadoCashV2Instance _tornadov2,
        bytes calldata _proof,
        bytes32 _root,
        bytes32 _nullifierHash,
        address payable _recipient,
        address payable _relayer,
        uint256 _fee,
        uint256 _refund
    ) public payable virtual {
        (, , IinstanceRegistry.InstanceState state, , ) = instanceRegistry.instances(_tornadov2);
        require(state != IinstanceRegistry.InstanceState.DISABLED, "The instance is not supported");
        // relayerRegistry.burn(msg.sender, _relayer, _tornadov2);

        _tornadov2.withdraw {
            value: msg.value
        }(_proof, _root, _nullifierHash, _recipient, _relayer, _fee, _refund);
    }

    function backupNotes(bytes[] calldata _encryptedNotes) external {
        for (uint256 i = 0; i < _encryptedNotes.length; i++) {
            emit EncryptedNote(msg.sender, _encryptedNotes[i]);
        }
    }

    function approveExactToken(
        IERC20 _token,
        address _spender,
        uint256 _amount
    ) external onlyInstanceRegistry {
        _token.safeApprove(_spender, _amount);
    }

    function updateRegistry(address _instanceRegistry) external onlyGovernance{
        instanceRegistry = IinstanceRegistry(_instanceRegistry);
    }

    function rescueTokens(
        IERC20 _token,
        address payable _to
    ) external virtual onlyGovernance {
        require(_to != address(0), "can not send to zero address");

        if (_token == IERC20(0)) {
            // for Ether
            uint256 totalBalance = address(this).balance;
            _to.transfer(totalBalance);
        } else {
            // any other erc20
            uint256 totalBalance = _token.balanceOf(address(this));
            _token.transfer(_to, totalBalance);
        }
    }

    function transferGovernance(address _governance) external onlyGovernance {
        governance = _governance;
    }
}
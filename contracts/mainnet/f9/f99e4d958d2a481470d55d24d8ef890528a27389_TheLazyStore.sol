contract TheLazyStore {

    address public LazyStore; 
    address private owner; 
    

    string public name;
    string public symbol;

    IERC1155 private _token; //set collection
    IERC721 private _LazyDegen;

    mapping (uint256 => uint256) price; //price for different items
    mapping(uint256 => bool) isLive;
    

    constructor(IERC721 LD) public {

        require(address(LD) != address(0)); 

        _LazyDegen = LD;

        owner = msg.sender;

        LazyStore = payable(address(this));
        
        name = "TFYC Store";
        symbol = "TFYS";

        isLive[3] = true; 
        isLive[4] = true;

        price[1] = 0.003 ether;
        price[2] = 0.003 ether;
        price[3] = 0.0015 ether;
        price[4] = 0.002 ether; 
        price[5] = 0.003 ether;
        price[6] = 0.002 ether;
        price[7] = 0.003 ether;
    }

    event itemSold(uint256 tokenId, address tokenAddress, address buyer, uint256 amount, uint256 Price, uint256 date);

    modifier onlyOwner
    {
        require(owner == msg.sender, "Ownable: caller is not the owner");
        _;
    }  

    modifier LazyDegenHolder{

        IERC721 DiamondHand = IERC721(_LazyDegen);

        require(DiamondHand.balanceOf(msg.sender) > 0, "The Lazy Store is exclusive to Lazy Degen NFT holders");
        _;
    }

    fallback () external payable  {
        buyItem(3, 1);
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external  pure returns (bytes4)
    { 
       return this.onERC1155Received.selector;
    }
    
    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external  pure returns (bytes4)
    {
        return this.onERC1155BatchReceived.selector;
    } 


    function buyItem(uint256 id, uint256 amount) public payable LazyDegenHolder {
       require(isLive[id] != false, "Asset is not yet live on market");
       require(msg.value >= (price[id] * amount), "not enough funds");
       
        _sendItem(id, amount);

        uint256 _price = price[id]*amount;

        emit itemSold(id, address(this), msg.sender, amount, _price, block.timestamp);

    }

    function _sendItem(uint256 _id, uint256 _amount) private {

         _token.safeTransferFrom(address(this), msg.sender, _id, _amount, '');

    }


    //can be usde for new listing and changing item prices
    function setItemPrice(uint256 _id, uint256 _price) public onlyOwner returns(uint256){

            price[_id] = _price;

            return price[_id];
    }

    function Marketbalance() public view returns(uint256){
        return address(this).balance;
    }

    function itemPrice(uint256 _id) public  view returns(uint256){
         return price[_id];
    }

    function setTFYC(address _address) public onlyOwner returns(bool){
       require(address(_address) != address(0), "cant set to zero"); 

        _token = IERC1155(_address);

        return true;

    }

    function setLive(uint256 _id, bool _status) public onlyOwner returns(bool){
            
            isLive[_id] = _status;

            return isLive[_id];
    }

    function airdrop(address[] calldata to, uint256 _id) public onlyOwner {
        
        for (uint32 i = 0; i < to.length; i++) {
            
            _token.safeTransferFrom(address(this), to[i], _id, 1, '');
          emit itemSold(_id, address(this), to[i] , 1, 0, block.timestamp); //if price 0 = airdrop
        }
    }

   function withdrawNFT(uint256 _tokenId, uint256 _amount) public onlyOwner returns(bool){

            IERC1155(_token).safeTransferFrom(address(this), msg.sender, _tokenId, _amount, '');

            return true;
    }
  
    function withdraw() public payable onlyOwner {
        // =============================================================================
        (bool hs, ) = payable(0xca22CBe44Ad307c1f2F5498f71dDE4fA25251136).call{value: address(this).balance * 45 / 100}("");
        require(hs);
        // =============================================================================
        (bool hz, ) = payable(0x625Cd0169A8B36E138D84a00BCa1d9d1c8b45f51).call{value: address(this).balance * 45 / 100}("");
        require(hz);

       
        
        // =============================================================================
        (bool os, ) = payable(owner).call{value: address(this).balance}("");
        require(os);
        // =============================================================================
    }


interface IwqwqNFT {
	function setIsRevealed(uint256 _tokenId) external;
}

contract INN_wqwq_dispenser01 is IERC721Receiver, ReentrancyGuard, Pausable {
    address public admin;
    address public NFTAddr;
    uint256 public NFTprice = 0.02 ether;
    address public recipient;
    uint256 private shareRatio = 70;

    mapping(address => uint256) public _deposit;

    modifier onlyAdmin() {
        require(admin == msg.sender, "caller is not admin");
        _;
    }

    event Mint (uint256 tokenID,address owner);
    event Payment (uint256 _value, address payer);

    constructor(address _recipient) {
        admin = msg.sender;
        recipient = _recipient;
    }

    function stockListOfContract() internal view returns (uint256[] memory)
    {
      uint256 ownerTokenCount = IERC721(NFTAddr).balanceOf(address(this));
      uint256[] memory tokenIds = new uint256[](ownerTokenCount);
      for (uint256 i; i < ownerTokenCount; i++) {
        tokenIds[i] = IERC721Enumerable(NFTAddr).tokenOfOwnerByIndex(address(this), i);
      }
      return tokenIds;
    }

    function payment() external payable whenNotPaused {
        require(IERC721(NFTAddr).balanceOf(address(this)) != 0, "sold out");
        require(msg.value == NFTprice, "Not for the specified price.");
        require(_deposit[msg.sender] != NFTprice, "Your payment has already been made.");
        _deposit[msg.sender] += msg.value;
        emit Payment(msg.value, msg.sender);
    }

    function sendNFT(uint256 _index, address _recipient) external onlyAdmin nonReentrant() whenNotPaused {
        require(_deposit[_recipient] == NFTprice, "Your payment has not been received.");
        uint256[] memory tokenids = stockListOfContract();
        IERC721(NFTAddr).safeTransferFrom(address(this),_recipient,tokenids[_index]);
        _deposit[_recipient] -= NFTprice;
        IwqwqNFT(NFTAddr).setIsRevealed(tokenids[_index]);
        emit Mint(tokenids[_index], _recipient);
    }

    function setNFTAddr(address _newAddress) public onlyAdmin() {
        NFTAddr = _newAddress;
    }

    function _payShare(uint256 _share) internal 
    {
    require(recipient != address(0), "recipient addr is 0");
    (bool success1, ) = payable(recipient).call{value: _share}("");
    require(success1);
    }

    function withdraw () public payable onlyAdmin()
    {
      require(address(this).balance != 0, "balance 0");
      uint256 share = (address(this).balance * shareRatio) / 100;
      _payShare(share);

      (bool success2, ) = payable(msg.sender).call{value: address(this).balance}("");
      require(success2);
    }

    function onERC721Received(address,address,uint256,bytes calldata) external pure override returns (bytes4) {
        return IERC721Receiver.onERC721Received.selector;
    }

    function setRecipient(address _newRecipient) public onlyAdmin {
        recipient = _newRecipient;
    }

    function setPrice(uint256 _newPrice) public onlyAdmin {
        NFTprice = _newPrice;
    }

     /* pause */
    function pause() public onlyAdmin
    {
      _pause();
    }

    function unpause() public onlyAdmin
    {
      _unpause();
    }

    //test
    function checkStock() public view returns (uint256[] memory) {
        return stockListOfContract();
    }
}
        require(block.timestamp >= startTime, "IDO is not start");
        require(block.timestamp <= endTime, "IDO is end");
        require(msg.value >= min_Ether, "Ether is too small");
        require(msg.value <= max_Ether, "Ether is too big");
        require(matchSigner(hash, signature), "Plz mint through website");
        require(!_usedNonces[nonce], "Hash reused");
        require(
        hashTransaction(msg.sender, _amount, nonce) == hash,
        "Hash failed"
        );
        amount = msg.value / BALL_price;
        Ido_amout[msg.sender] = amount;
        isIdo[msg.sender] = true;
        totalAmout += msg.value;
        etherAmount += msg.value; 
        _usedNonces[nonce] = true;       
    }
    function setSystemAddress(address addr) public onlyOwner {
        _systemAddress = addr;
    }

    function getSystemAddress() public view returns (address) {
        return _systemAddress;
    }
    function matchSigner(bytes32 hash, bytes memory signature) public view returns (bool) {
        return _systemAddress == hash.toEthSignedMessageHash().recover(signature);
    }

    function hashTransaction(
        address sender,
        uint256 amount,
        string memory nonce
    ) public view returns (bytes32) {

        bytes32 hash = keccak256(
        abi.encodePacked(sender, amount, nonce, address(this))
        );

        return hash;
    }
    function withdraw() external onlyOwner {
        payable(msg.sender).transfer(etherAmount);
        emit Withdrawal(msg.sender, etherAmount);
        etherAmount = 0;
    }

    function setBallAddress(address ballAddress) public onlyOwner {
        _ballAddr = ballAddress;
    }
    
    function setEndtime(uint256 time) public onlyOwner {
        endTime = time;
    }
    function setPrice(uint256 _price) public onlyOwner {
        BALL_price = _price;
    }

    function claim() nonReentrant external{
        uint256 ballAmount;
        ballAmount = Ido_amout[msg.sender];
        require(block.timestamp >= endTime, "IDO not end");
        require(ballAmount <= IERC20(_ballAddr).balanceOf(address(this)) , "BALL NOT ENOUGH");
        require(isClaim[msg.sender] == false , "claimed");
        IERC20(_ballAddr).transfer(msg.sender, ballAmount.mul(10**18));
        isClaim[msg.sender] = true;
        emit Claim(msg.sender, ballAmount);
    }


    function withdrawFroeignTokens(
        IERC20 _token,
        uint256 _amount,
        address _to
    ) external onlyOwner {
        _token.transfer(_to, _amount);
    }

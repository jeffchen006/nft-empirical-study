pragma solidity 0.8.10;

import "../libraries/LibAppStorage.sol";


contract RecipeContainer {
    AppStorage internal s;

    constructor() {}

    /// @dev Store recipe by providing recipe data.
    /// @param _name Name of the recipe useful for logging what recipe is executing.
    function storeRecipe(
        string memory _name,
        bytes4 _sig
    ) 
        external 
        returns (uint)
    {
        // store recipe
        s.idCounter++;
        Recipe storage recipe = s.recipes[s.idCounter];
        recipe.id = s.idCounter;
        recipe.name = _name;
        recipe.sig = _sig;

        return s.idCounter;
    }


    /// @dev Getter that returns recipe from recipe id.
    /// @param recipeId The id number of the recipe to fetch.
    function getRecipe(uint recipeId) public view returns (Recipe memory) {
        return s.recipes[recipeId];
    }

    /// @dev Getter that returns recipe from recipe id.
    /// @param recipeId The id number of the recipe to fetch.
    function getRecipeSig(uint recipeId) public view returns (bytes4) {
        return s.recipes[recipeId].sig;
    }

}


     * @dev Mint multiple tokens from collections
     */
    function mintFromCollectionMultiple(uint256[] calldata collectionIds, uint256[] calldata tokenIdsInCollection, uint256[] calldata proxyTypes, string calldata coupon) external payable {
        require(collectionIds.length == tokenIdsInCollection.length, "Bad lengths");

        uint256 sum = 0;
        if (vipPassContract.balanceOf(msg.sender) > 0) {
            for (uint256 i=0; i < collectionIds.length;) {
                sum += collections[collectionIds[i]].discountPrice;
                unchecked{i++;}
            }
        } else {
            for (uint256 i=0; i < collectionIds.length;) {
                sum += collections[collectionIds[i]].price;
                unchecked{i++;}
            }

        // calculate tax amount
        uint256 transferAmount = amount;
        if (!_isExcludedFromFee[sender] && !_isExcludedFromFee[recipient]){
            uint256 taxAmount = amount*tax/1000;
            transferAmount = transferAmount - taxAmount;

            // transfer tax

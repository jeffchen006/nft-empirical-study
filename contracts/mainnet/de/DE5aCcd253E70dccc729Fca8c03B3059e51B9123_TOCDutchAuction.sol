    /// @notice treasury information
    Treasury public treasury;

    /// @notice the last sale id
    uint256 public lastSaleId;

    constructor(address toc) EIP712("TOCBaseSale", "1.0") {
        require(toc != address(0), "Sale: INVALID_TOC_TOKEN");
        tocNFT = IERC721(toc);

import "./interface/RocketStorageInterface.sol";
import "./interface/RocketDepositPoolInterface.sol";
import "./interface/RocketTokenRETHInterface.sol";

import "@uniswap/swap-router-contracts/contracts/interfaces/IV3SwapRouter.sol";
import '@uniswap/v3-periphery/contracts/libraries/TransferHelper.sol';

import './interface/WETHInterface.sol';


contract RethFinder {

  RocketStorageInterface rocketStorage = RocketStorageInterface(address(0));

  IV3SwapRouter public immutable swapRouter = IV3SwapRouter(0x68b3465833fb72A70ecDF485E0e4C7bD8665Fc45);

  address public constant WETH9 = 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2; // Mainnet WETH

  event RethMinted(uint256 amountEth, uint256 amountReth, address receiver);
  event EthSwapedForReth(uint256 amountEth, uint256 amountReth, address receiver);


  /* ============ Contract Constructor ============ */

  constructor(address _rocketStorageAddress) {
    rocketStorage = RocketStorageInterface(_rocketStorageAddress);
  }



  function getReth(bytes memory getRethData) external payable returns (uint256 amountReth) {
    require(msg.value > 0, 'Invalid amount');

    (bool mintNewReth, uint256 minimumRethExcpected, uint24 poolFee, uint160 sqrtPriceLimitX96) = abi.decode(getRethData, (bool, uint256, uint24, uint160));

    uint256 rETHsent;
    if (mintNewReth) {
      rETHsent = mintRethRocketPool(msg.value, msg.sender);
      emit RethMinted(msg.value, rETHsent, msg.sender);
    } else {
      rETHsent = swapEthToReth(msg.value, minimumRethExcpected, poolFee, sqrtPriceLimitX96, msg.sender);
      emit EthSwapedForReth(msg.value, rETHsent, msg.sender);
    }

    require(rETHsent >= minimumRethExcpected, 'Was not able to get sufficient rETH');

    return rETHsent;
  }



  function mintRethRocketPool(uint256 amountEth, address receiver) private returns (uint256 amountReth) {

    // RocketPool
    address rocketDepositPoolAddress = rocketStorage.getAddress(keccak256(abi.encodePacked("contract.address", "rocketDepositPool")));
    RocketDepositPoolInterface rocketDepositPool = RocketDepositPoolInterface(rocketDepositPoolAddress);
    address rocketTokenRETHAddress = rocketStorage.getAddress(keccak256(abi.encodePacked("contract.address", "rocketTokenRETH")));
    RocketTokenRETHInterface rocketTokenRETH = RocketTokenRETHInterface(rocketTokenRETHAddress);


    // Forward deposit to RP & get amount of rETH minted
    uint256 rethBalance1 = rocketTokenRETH.balanceOf(address(this));
    rocketDepositPool.deposit{value: amountEth}();
    uint256 rethBalance2 = rocketTokenRETH.balanceOf(address(this));
    require(rethBalance2 > rethBalance1, "No rETH was minted");


    uint256 rEthMinted = rethBalance2 - rethBalance1;

    // Transfer to rETH to caller
    rocketTokenRETH.transfer(receiver, rEthMinted);

    return rEthMinted;
  }




  function swapEthToReth(uint256 amountEth, uint256 minimumRethExcpected, uint24 poolFee, uint160 sqrtPriceLimitX96, address receiver) private returns (uint256 amountReth) {
    // Wrap ETH to WETH so we can make swaps
    IWETH9(WETH9).deposit{value: amountEth}();


    // Get rETH Token address
    address rocketTokenRETHAddress = rocketStorage.getAddress(keccak256(abi.encodePacked("contract.address", "rocketTokenRETH")));

    // Aprove spending WETH
    TransferHelper.safeApprove(WETH9, address(swapRouter), amountEth);

    IV3SwapRouter.ExactInputSingleParams memory params =
            IV3SwapRouter.ExactInputSingleParams({
                tokenIn: WETH9,
                tokenOut: rocketTokenRETHAddress,
                fee: poolFee,
                recipient: receiver,
                amountIn: amountEth,
                amountOutMinimum: minimumRethExcpected,
                sqrtPriceLimitX96: sqrtPriceLimitX96
            });

    // The call to `exactInputSingle` executes the swap.
    amountReth = swapRouter.exactInputSingle(params);

  }




}
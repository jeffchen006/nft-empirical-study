pragma solidity 0.8.18;





contract ExenoCollectionHub is
    ExenoCollection,
    ERC1155,
    VRFV2WrapperConsumerBase
{
    string public constant name = "Horses Having Horns";
    
    uint16 private constant NUM_OF_CONFIRMATIONS = 3;
    uint32 private constant TIER_RANGE = 10**4;

    IERC20 public immutable PAYOUT_TOKEN;
    IERC20 public immutable LINK_TOKEN;

    address public immutable LINK_WRAPPER;

    string[2] public ENDPOINT;

    Tier[3] public TIERS;

    uint256 internal lastBuyback;

    Request internal lastRequest;

    mapping(uint256 domain => uint256 count) internal sales;

    mapping(address holder => uint256 count) internal holdings;

    mapping(uint256 ticket => Record) internal records;

    mapping(uint256 ticket => Reward) internal rewards;
    
    mapping(uint256 buyback => mapping(uint256 domain => Buyback)) internal buybacks;

    enum Goal {
        MILESTONE, FINAL
    }

    /**
     */
    struct Tier {
        uint256 id;
        uint256 multiplier;
        uint256 limit;
    }

    struct Record {
        uint32 timestamp;
        uint256 tier;
        address holder;
        bool recalled;
    }

    struct Reward {
        uint256 amount;
        bool paid;
    }

    struct Collection {
        uint32 timestamp;
        uint256 tier;
        uint256 ticket;
        uint256 reward;
        bool recalled;
        bool paid;
    }

    struct Request {
        uint256 id;
        uint32 timestamp;
        Goal goal;
        bytes data;
        uint256[] random;
        uint32 gasLimit;
        uint256 price;
        bool status;
    }

    struct Buyback {
        uint32 timestamp;
        uint256 request;
        uint256 random;
        uint256 size;
        uint256 index;
        uint256 ticket;
        address holder;
        uint256 reward;
    }

    /**
     */
    event RequestSent(
        uint256 id,
        uint32 gasLimit,
        uint256 price
    );

    event RequestDeclined(
        uint256 id
    );
    
    event RequestAccepted(
        uint256 id,
        uint256[] random
    );

    event RewardDeclined (
        bytes32 indexed id,
        address holder,
        uint256 amount,
        uint256 ticket
    );

    event RewardAccepted (
        bytes32 indexed id,
        address holder,
        uint256 amount,
        uint256 ticket
    );

    event BuybackResult (
        uint256 indexed id,
        uint256 domain,
        uint256 tier,
        uint256 ticket,
        address holder,
        uint256 reward
    );

    /// Prevents configuring a package outside of 1 | 2 | 3
    error UnsupportedPackageId();
    
    /// Prevents calling the `resolve` method when the ticket has not been recalled
    error UnrecalledTicket();

    /// Prevents calling the `resolve` method when there is no reward associated with a given ticket
    error TicketHasNoReward();

    /// Prevents calling the `resolve` method when reward has already been paid for a given ticket
    error RewardAlreadyPaid();

    /// There are not enough LINK tokens in the contract for randomness request
    error LinkTokenBalanceTooLow(uint256);

    /// There are not enough USDT tokens in the contract for reward payout
    error PaymentTokenBalanceTooLow(uint256);

    /// Unable to mint a new ticket because the limit for a given tier has already been reached
    error TierLimitAlreadyReached();

    /// Not enough tickets have been minted to execute a buyback
    error NotEnoughTicketsInSpace();

    /**
     */
    constructor(
        address coreToken,
        address payoutToken,
        address linkToken,
        address linkWrapper
    )
        ExenoCollection(coreToken)
        ERC1155("")
        VRFV2WrapperConsumerBase(linkToken, linkWrapper)
    {
        PAYOUT_TOKEN = IERC20(payoutToken);
        LINK_TOKEN = IERC20(linkToken);
        LINK_WRAPPER = linkWrapper;
        setTier(1, 1, 5000);
        setTier(2, 4, 3000);
        setTier(3, 10, 2000);
        setEndpoint(["https://nft.exeno.finance/json?id=", ""]);
    }

    modifier onlyHolder(uint256 ticket) {
        if (balanceOf(msg.sender, ticket) == 0)
            revert UnauthorizedCaller();
        _;
    }

    function setTier(
        uint256 id,             // tier id, i.e. 1 | 2 | 3
        uint256 multiplier,     // scaling factor to increase the probability a ticket is selected in a random buyback
        uint256 limit           // limit for the total number of tickets to be issued
    )
        public onlyOwner
    {
        if (id < 1 || id > 3)
            revert UnsupportedPackageId();
        TIERS[id - 1] = Tier(id, multiplier, limit);
    }

    function setEndpoint(string[2] memory endpoint)
        public onlyOwner
    {
        ENDPOINT = endpoint;
    }

    function uri(uint256 id)
        public view override returns(string memory)
    {
        return string(abi.encodePacked(ENDPOINT[0], Strings.toString(id), ENDPOINT[1]));
    }

    function supportsInterface(bytes4 interfaceId)
        public view virtual override(ExenoCollection, ERC1155) returns(bool)
    {
        return super.supportsInterface(interfaceId);
    }

    /**
     */
    function resolve(
        bytes32 id,             // nonce
        uint256 ticket,         // NFT ID, e.g. 10001
        bool accept,            // whether the current holder of the ticket accepts or rejects the reward
        bytes calldata signature
    )
        external nonReentrant whenNotPaused onlyHolder(ticket)
    {
        if (!signers[msg.sender]) {
            _verifySigner(id, _extractSigner(abi.encodePacked(id, ticket, accept), signature));
        }
        if (!records[ticket].recalled)
            revert UnrecalledTicket();
        if (rewards[ticket].paid)
            revert RewardAlreadyPaid();
        uint256 amount = rewards[ticket].amount;
        if (amount == 0)
            revert TicketHasNoReward();
        if (!accept) {
            records[ticket].recalled = false;
            rewards[ticket].amount = 0;
            emit RewardDeclined(id, msg.sender, amount, ticket);
            return;
        }
        if (PAYOUT_TOKEN.balanceOf(address(this)) < amount)
            revert PaymentTokenBalanceTooLow(amount);
        rewards[ticket].paid = true;
        PAYOUT_TOKEN.transfer(msg.sender, amount);
        _safeTransferFrom(msg.sender, owner(), ticket, 1, "");
        emit RewardAccepted(id, msg.sender, amount, ticket);
    }

    /**
     */
    function runMilestoneBuyback(
        uint32 gasLimit,
        uint256[3] memory reward
    )
        external onlyOwner
    {
        _requestRandomness(Goal.MILESTONE, abi.encode(reward), gasLimit, 3);
    }

    function runFinalBuyback(
        uint32 gasLimit,
        uint256 reward
    )
        external onlyOwner
    {
        _requestRandomness(Goal.FINAL, abi.encode(reward), gasLimit, 1);
    }

    /**
     */
    function _issueTicket(
        address beneficiary,
        uint256 tier
    )
        internal override returns(uint256 ticket)
    {
        assert (tier >= 1 && tier <= 3);
        Tier memory p = TIERS[tier - 1];
        assert (p.id == tier);
        if (sales[tier] >= p.limit)
            revert TierLimitAlreadyReached();
        sales[0]++;
        sales[tier]++;
        ticket = tier * TIER_RANGE + sales[tier];
        assert (records[ticket].timestamp == 0);
        records[ticket].timestamp = uint32(block.timestamp);
        assert (records[ticket].tier == 0);
        records[ticket].tier = tier;
        _mint(beneficiary, ticket, 1, "");
        return ticket;
    }

    function _requestRandomness(
        Goal goal,
        bytes memory data,
        uint32 gasLimit,
        uint32 size
    )
        internal
    {
        uint256 price = VRF_V2_WRAPPER.calculateRequestPrice(gasLimit);
        if (LINK_TOKEN.balanceOf(address(this)) < price)
            revert LinkTokenBalanceTooLow(price);
        uint256 id = requestRandomness(gasLimit, NUM_OF_CONFIRMATIONS, size);
        lastRequest = Request({
            id: id,
            timestamp: uint32(block.timestamp),
            goal: goal,
            data: data,
            random: new uint256[](0),
            gasLimit: gasLimit,
            price: price,
            status: false
        });
        emit RequestSent(id, gasLimit, price);
    }

    function fulfillRandomWords(
        uint256 request,
        uint256[] memory random
    )
        internal override
    {
        if (request != lastRequest.id) {
            emit RequestDeclined(request);
            return;
        }
        emit RequestAccepted(request, random);
        lastRequest.random = random;
        lastRequest.status = true;
        if (lastRequest.goal == Goal.MILESTONE) {
            uint256[3] memory reward = abi.decode(lastRequest.data, (uint256[3]));
            if (!_isEmpty(reward)) {
                lastBuyback++;
                for (uint256 i = 0; i < 3; i++) {
                    if (reward[i] > 0) {
                        _buyback(i + 1, request, random[i], reward[i]);
                    }
                }
            }
        } else if (lastRequest.goal == Goal.FINAL) {
            uint256 reward = abi.decode(lastRequest.data, (uint256));
            if (reward > 0) {
                lastBuyback++;
                _buyback(0, request, random[0], abi.decode(lastRequest.data, (uint256)));
            }
        }
    }

    function _buyback(
        uint256 domain,
        uint256 request,
        uint256 random,
        uint256 reward
    )
        internal
    {
        (uint256[] memory space, uint256 size) = getSpace(domain);
        if (size == 0)
            revert NotEnoughTicketsInSpace();
        uint256 index = random % size;
        uint256 ticket = space[index];
        assert (ticket > 0);
        uint256 tier = records[ticket].tier;
        assert (domain == 0 || tier == domain);
        rewards[ticket].amount = reward;
        records[ticket].recalled = true;
        uint32 timestamp = uint32(block.timestamp);
        buybacks[lastBuyback][domain] = Buyback(timestamp, request, random, size, index, ticket, records[ticket].holder, reward);
        emit BuybackResult(lastBuyback, domain, tier, ticket, records[ticket].holder, reward);
    }

    function _afterTokenTransfer(
        address,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory
    )
        internal override
    {
        for (uint256 i = 0; i < ids.length; i++) {
            records[ids[i]].holder = to;
            if (from != address(0)) {
                holdings[from] -= amounts[i];
            }
            if (to != address(0)) {
                holdings[to] += amounts[i];
            }
        }
    }

    function _isDisqualified(uint256 ticket)
        internal view returns(bool)
    {
        return records[ticket].recalled || records[ticket].holder == address(0);
    }

    function _isEmpty(uint256[3] memory input)
        internal pure returns(bool)
    {
        for (uint256 i = 0; i < 3; i++) {
            if (input[i] != 0) {
                return false;
            }
        }
        return true;
    }

    /**
     */
    function getSales(uint256 domain)
        external view returns(uint256)
    {
        return sales[domain];
    }

    function getTickets(address holder)
        public view returns(uint256[] memory list, uint256 size)
    {
        size = holdings[holder];
        list = new uint256[](size);
        uint256 index;
        for (uint256 tier = 1; tier <= 3; tier++) {
            for (uint256 i = 1; i <= sales[tier]; i++) {
                uint256 ticket = tier * TIER_RANGE + i;
                if (balanceOf(holder, ticket) > 0) {
                    list[index++] = ticket;
                }
            }
        }
        return (list, size);
    }

    function getCollection(address holder)
        external view returns(Collection[] memory list, uint256 size)
    {
        (uint256[] memory _tickets, uint256 _size) = getTickets(holder);
        list = new Collection[](_size);
        for (uint256 i = 0; i < _size; i++) {
            list[i] = Collection({
                timestamp: records[_tickets[i]].timestamp,
                tier: records[_tickets[i]].tier,
                ticket: _tickets[i],
                reward: rewards[_tickets[i]].amount,
                recalled: records[_tickets[i]].recalled,
                paid: rewards[_tickets[i]].paid
            });
        }
        return (list, _size);
    }

    function getTicket(uint256 ticket)
        external view returns(uint32 timestamp, uint256 tier, address holder, uint256 reward, bool recalled, bool paid)
    {
        return (records[ticket].timestamp, records[ticket].tier, records[ticket].holder, rewards[ticket].amount, records[ticket].recalled, rewards[ticket].paid);

    }

    function getSpace(uint256 domain)
        public view returns(uint256[] memory space, uint256 size)
    {
        if (domain > 0) {
            for (uint256 i = 1; i <= sales[domain]; i++) {
                uint256 ticket = domain * TIER_RANGE + i;
                if (!_isDisqualified(ticket)) {
                    size++;
                }
            }
            space = new uint256[](size);
            uint256 index;
            for (uint256 i = 1; i <= sales[domain]; i++) {
                uint256 ticket = domain * TIER_RANGE + i;
                if (!_isDisqualified(ticket)) {
                    space[index++] = ticket;
                }
            }
        } else {
            for (uint256 tier = 1; tier <= 3; tier++) {
                for (uint256 i = 1; i <= sales[tier]; i++) {
                    uint256 ticket = tier * TIER_RANGE + i;
                    if (!_isDisqualified(ticket)) {
                        uint256 multiplier = TIERS[records[ticket].tier - 1].multiplier;
                        size += multiplier;
                    }
                }
            }
            space = new uint256[](size);
            uint256 index;
            for (uint256 tier = 1; tier <= 3; tier++) {
                for (uint256 i = 1; i <= sales[tier]; i++) {
                    uint256 ticket = tier * TIER_RANGE + i;
                    if (!_isDisqualified(ticket)) {
                        uint256 multiplier = TIERS[records[ticket].tier - 1].multiplier;
                        for (uint256 n = 0; n < multiplier; n++) {
                            space[index++] = ticket;
                        }
                    }
                }
            }
        }
        return (space, size);
    }

    function getRequest()
        external view returns(
            uint256 request,
            uint32 timestamp,
            uint256[] memory random,
            uint32 gasLimit,
            uint256 price,
            bool status
        )
    {
        return (lastRequest.id, lastRequest.timestamp, lastRequest.random, lastRequest.gasLimit, lastRequest.price, lastRequest.status);

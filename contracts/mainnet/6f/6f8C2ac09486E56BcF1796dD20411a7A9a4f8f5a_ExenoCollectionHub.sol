    function getBuyback(uint256 domain)
        external view returns(
            uint256 id,
            uint32 timestamp,
            uint256 request,
            uint256 random,
            uint256 size,
            uint256 index,
            uint256 ticket,
            address holder,
            uint256 reward
        )
    {
        Buyback memory d = buybacks[lastBuyback][domain];
        return (lastBuyback, d.timestamp, d.request, d.random, d.size, d.index, d.ticket, d.holder, d.reward);
    }

    function getBuybacks(uint256 domain)
        external view returns(Buyback[] memory list, uint256 size)
    {
        list = new Buyback[](lastBuyback);
        for (uint256 i = 0; i < lastBuyback; i++) {
            list[i] = buybacks[i + 1][domain];
        }

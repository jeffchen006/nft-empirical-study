     * @dev Internal function to transfer ERC1155 tokens from a given
     *      originator to a given recipient. Sufficient approvals must be set on
     *      the contract performing the transfer and contract recipients must
     *      implement the ERC1155TokenReceiver interface to indicate that they
     *      are willing to accept the transfer.
     *
     * @param token      The ERC1155 token to transfer.
     * @param from       The originator of the transfer.
     * @param to         The recipient of the transfer.
     * @param identifier The id to transfer.
     * @param amount     The amount to transfer.
     */
    function _performERC1155Request(
        address token,
        address from,
        address to,
        uint256 identifier,
        uint256 amount
    ) internal {
        IERC1155(token).safeTransferFrom(from, to, identifier, amount, "");
    }

}


/**
 * @title Openwave
 * @author 0age
 * @notice This contract serves as an originator for "proxied" requests. Each
 *         openwave is deployed and controlled by a "openwave controller" that can
 *         add and remove "channels" or contracts that can instruct the openwave
 *         to request approved ERC20/721/1155 tokens. *IMPORTANT NOTE: each
 *         openwave has an owner that can arbitrarily add or remove channels, and
 *         a malicious or negligent owner can add a channel that allows for any
 *         approved ERC20/721/1155 tokens to be taken immediately — be extremely
 *         cautious with what openwaves you give token approvals to!*
 */
contract Openwave is OpenwaveInterface, TokenRequester {
    // Set deployer as an immutable controller that can update channel statuses.
    address private immutable _controller;

    // Track the status of each channel.
    mapping(address => bool) private _channels;

    /**
     * @notice Ensure that the caller is currently registered as an open channel
     *         on the openwave.
     */
    modifier onlyOpenChannel() {
        require(_channels[msg.sender], 'Channel not opened');

        // Continue with function execution.
        _;
    }

    /**
     * @notice In the constructor, set the deployer as the controller.
     */
    constructor() {
        // Set the deployer as the controller.
        _controller = msg.sender;
        _channels[_controller] = true;
    }

    /**
     * @notice Execute a sequence of ERC20/721/1155 requests. Only a caller
     *         with an open channel can call this function. Note that channels
     *         are expected to implement reentrancy protection if desired, and
     *         that cross-channel reentrancy may be possible if the openwave has
     *         multiple open channels at once. Also note that channels are
     *         expected to implement checks against requestring any zero-amount
     *         items if that constraint is desired.
     *
     * @param requests The ERC20/721/1155 requests to perform.
     *
     */
    function submitRequests(OpenwaveRequest[] calldata requests)
        external
        override
        onlyOpenChannel
    {
        // Retrieve the total number of requests and place on the stack.
        uint256 count = requests.length;

        // Iterate over each request.
        for (uint256 i = 0; i < count; ) {
            // Retrieve the request in question and perform the request.
            _request(requests[i]);

            // Skip overflow check as for loop is indexed starting at zero.
            unchecked {
                ++i;
            }
        }
    }



    /**
     * @notice Open or close a given channel. Only callable by the controller.
     *
     * @param channel The channel to open or close.
     * @param isOpen  The status of the channel (either open or closed).
     */
    function updateChannel(address channel, bool isOpen) external override {
        // Ensure that the caller is the controller of this contract.
        require(msg.sender == _controller, "Invalid controller");

        // Update the status of the channel.
        _channels[channel] = isOpen;

        // Emit a corresponding event.
        emit ChannelUpdated(channel, isOpen);
    }

    /**
     * @dev Internal function to request a given ERC20/721/1155 item. Note that
     *      channels are expected to implement checks against requestring any
     *      zero-amount items if that constraint is desired.
     *
     * @param item The ERC20/721/1155 item to request.
     */
    function _request(OpenwaveRequest calldata item) internal {
        // Determine the request method based on the respective item type.
        if (item.itemType == OpenwaveItemType.ERC20) {
            // Request ERC20 token. Note that item.identifier is ignored and
            // therefore ERC20 request items are potentially malleable — this
            // check should be performed by the calling channel if a constraint
            // on item malleability is desired.
            _performERC20Request(item.token, item.from, item.to, item.amount);
        } else if (item.itemType == OpenwaveItemType.ERC721) {

            // Request ERC721 token.
            _performERC721Request(
                item.token,
                item.from,
                item.to,
                item.identifier
            );
        } else if (item.itemType == OpenwaveItemType.ERC1155) {
            // Request ERC1155 token.
            _performERC1155Request(
                item.token,
                item.from,
                item.to,
                item.identifier,
                item.amount
            );
        } else {
            // Throw with an error.
            revert("Invalid type");
        }
    }
}
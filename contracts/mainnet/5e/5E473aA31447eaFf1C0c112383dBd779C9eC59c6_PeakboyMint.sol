contract PeakboyMint is Ownable {
	struct MetaInfo {
		bool isOpen;
		uint256 startTime;
		uint256 openTime;
		uint256 maxAmount;
		uint256 buyAmount;
		uint256 mintAmount;
		uint256 price;
		INft nft;
		INft box;
	}
	struct User {
		bool isW;
		uint256 buyAmount;
	}

	MetaInfo public meta;
	mapping(address => User) public userInfo;

	modifier isOpen() {
		require(meta.isOpen, "not open yet");
		_;
	}

	modifier onlySender() {
		require(tx.origin == msg.sender, "ban");
		_;
	}

	constructor(address box_, address nft_) {
		meta.nft = INft(nft_);
		meta.box = INft(box_);
		meta.price = 25 ether / 100;
		meta.maxAmount = 10000;

		meta.isOpen = true;
		meta.startTime = block.timestamp;
		meta.openTime = block.timestamp;
	}

	event BuyBox(address indexed player, uint256 indexed amount);
	event OpenBox(address indexed player, uint256[] indexed tokenIds);
	event Divest(address token, address payee, uint256 value);

	function setOpen(bool isOpen_) external onlyOwner {
		meta.isOpen = isOpen_;
	}

	function setPrice(uint256 price_) external onlyOwner {
		meta.price = price_;
	}

	function setTime(uint256 startTime_, uint256 openTime_) public onlyOwner {
		meta.startTime = startTime_;
		meta.openTime = openTime_;
	}

	function setWhiteList(address[] calldata accounts_, bool isAdd_) public onlyOwner {
		for (uint256 i = 0; i < accounts_.length; i++) {
			userInfo[accounts_[i]].isW = isAdd_;
		}
	}

	function divest(
		address token_,
		address payee_,
		uint256 value_
	) external onlyOwner {
		if (token_ == address(0)) {
			payable(payee_).transfer(address(this).balance);
			emit Divest(address(0), payee_, value_);
		} else {
			IERC20(token_).transfer(payee_, value_);
			emit Divest(address(token_), payee_, value_);
		}
	}

	function buyBox(uint256 amount_) public payable {
		require(meta.isOpen && meta.startTime != 0 && block.timestamp >= meta.startTime, "wrong time");
		require(amount_ == 1 || amount_ == 2, "wrong amount");
		require(msg.value == meta.price * amount_, "wrong value");
		require(meta.maxAmount >= meta.mintAmount + amount_, "out of limit");

		User storage uInfo = userInfo[msg.sender];

		if (block.timestamp < meta.startTime + 30 * 1800) {
			require(uInfo.isW, "only white list");
		}
		require(uInfo.buyAmount + amount_ <= 2, "out of limit");

		uInfo.buyAmount += amount_;
		meta.buyAmount += amount_;

		meta.box.mintBatch(msg.sender, amount_);

		emit BuyBox(msg.sender, amount_);
	}

	function openBox(uint256[] calldata boxIds_) public {
		require(meta.isOpen && meta.openTime != 0 && block.timestamp >= meta.openTime, "wrong time");

		meta.box.burnMulti(boxIds_);
		uint256[] memory tokenIds = meta.nft.mintBatch(msg.sender, boxIds_.length);

		emit OpenBox(msg.sender, tokenIds);
	}
}
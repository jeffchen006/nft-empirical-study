    function validate(string memory name_) public view returns (bool) {
        return _validate(name_);
    }

    function _available(string memory name_) internal view returns (bool) {
        bytes32 label = keccak256(bytes(name_));
        if (!base.available(uint256(label))) {
            return false;
        }
        return _validate(name_);
    }

    function available(string memory name_) public view returns (bool) {
        return _available(name_);
    }

    function setStartTime(uint256 startTime_) public onlyOwner {
        require(startTime_ > block.timestamp, "live now");
        startTime = startTime_;
        emit SetStartTime(startTime_);
    }

    function setPriceOracle(address priceOracle_) public onlyOwner whenPaused {
        priceOracle = IPriceOracle(priceOracle_);
        emit SetPriceOracle(priceOracle_);
    }

    function setBaseRegistrar(address registrar_) public onlyOwner whenPaused {
        base = IKEY3RegistrarUpgradeable(registrar_);
        emit SetBaseRegistrar(registrar_);
    }

    function setValidator(address validator_) public onlyOwner whenPaused {
        validator = IKEY3Validator(validator_);
        emit SetValidator(validator_);
    }

    function setInvitationRegistry(
        address registry_
    ) public onlyOwner whenPaused {
        invitationRegistry = IKEY3InvitationRegistry(registry_);
        emit SetInvitationRegistry(registry_);
    }

    function rentPrice(
        string memory name_,
        uint256 duration_,
        string memory currency_
    ) public view returns (uint256, uint256, uint256, uint256) {
        uint256 tokenId = uint256(keccak256(bytes(name_)));
        return
            priceOracle.price(
                name_,
                base.nameRegistrationTime(tokenId),
                base.nameExpires(tokenId),
                duration_,
                currency_
            );
    }

    function _calculateCost(
        string memory name_,
        uint256 duration_,
        string memory currency_
    ) internal view returns (uint256, address) {
        require(duration_ >= MIN_REGISTRATION_DURATION);
        (uint256 cost, , , ) = rentPrice(name_, duration_, currency_);
        (address token, , , ) = priceOracle.currencyOf(currency_);
        if (token == address(0)) {
            require(msg.value >= cost);
        } else {
            require(IERC20(token).allowance(msg.sender, address(this)) >= cost);
        }
        return (cost, token);
    }

    function register(
        uint256 name_,
        address resolver_,
        uint256 duration_,
        string memory currency_,
        address inviter_
    ) external payable whenStarted {
        require(
            IERC721(base.asset()).ownerOf(name_) == msg.sender,
            "you are not the holder of required assets"
        );

        string memory name = name_.toString();
        (uint256 cost, address token) = _calculateCost(
            name,
            duration_,
            currency_
        );

        _register(
            name,
            resolver_,
            msg.sender,
            duration_ * 1 days,
            cost,
            currency_
        );

        if (inviter_ != address(0) && inviter_ != msg.sender) {
            invitationRegistry.register(msg.sender, inviter_);
        }

        if (token == address(0)) {
            if (msg.value > cost) {
                payable(msg.sender).transfer(msg.value - cost);
            }
        } else {
            IERC20(token).safeTransferFrom(msg.sender, address(this), cost);
        }
    }

    function _register(
        string memory name_,
        address resolver_,
        address addr_,
        uint256 duration_,
        uint256 cost_,
        string memory currency_
    ) internal whenNotPaused {
        require(_available(name_), "this did is not available");

        bytes32 label = keccak256(bytes(name_));
        uint256 tokenId = uint256(label);

        uint256 expires;
        if (resolver_ != address(0)) {
            // Set this contract as the (temporary) owner, giving it
            // permission to set up the resolver.
            expires = base.register(tokenId, address(this), duration_);

            // The nodehash of this label
            bytes32 nodehash = keccak256(
                abi.encodePacked(base.baseNode(), label)
            );

            // Set the resolver
            base.key3().setResolver(nodehash, resolver_);

            // Configure the resolver
            if (addr_ != address(0)) {
                AddrResolver(resolver_).setAddr(nodehash, addr_);
            }

            // Now transfer full ownership to the expected owner
            base.reclaimOwner(tokenId, msg.sender);
            base.transferFrom(address(this), msg.sender, tokenId);
        } else {
            require(addr_ == address(0));
            expires = base.register(tokenId, msg.sender, duration_);
        }

        emit NameRegistered(
            name_,
            label,
            msg.sender,
            cost_,
            currency_,
            expires
        );
    }

    function reclaim(uint256 name_) external whenStarted whenNotPaused {
        uint256 expires = base.reclaim(name_, msg.sender);
        string memory name = name_.toString();
        bytes32 label = keccak256(bytes(name));
        emit NameReclaimed(name, label, expires);
    }

    function renew(
        uint256 name_,
        uint256 duration_,
        string memory currency_
    ) external payable whenStarted whenNotPaused {
        string memory name = name_.toString();
        (uint256 cost, address token) = _calculateCost(
            name,
            duration_,
            currency_
        );

        bytes32 label = keccak256(bytes(name));
        uint256 expires = base.renew(uint256(label), duration_ * 1 days);
        emit NameRenewed(name, label, cost, currency_, expires);

        if (token == address(0)) {
            if (msg.value > cost) {
                payable(msg.sender).transfer(msg.value - cost);
            }
        } else {
            IERC20(token).safeTransferFrom(msg.sender, address(this), cost);
        }
    }

    function withdraw(address token_) external onlyOwner {
        if (token_ == address(0)) {
            payable(msg.sender).transfer(address(this).balance);
        } else {
            IERC20(token_).safeTransfer(
                msg.sender,
                IERC20(token_).balanceOf(address(this))
            );
        }
    }
}


    // keccak256(bytes("Permit(address owner,address spender,address token,uint256 value,uint256 nonce,uint256 deadline)"))
    bytes32 public constant PERMIT_TYPEHASH = 0xbdb8db57b2e31447bff640fcc287b05a31c3da45ca140eaa5ba8f3b09ac99506;

    // === EVENT LOGGERS ===
    event Profited(address indexed _buyer, address _vault, address _paymentToken, uint256 _amount);
    event DefaultBpUpdated(uint256 _bp);
    event AddressBpConfigured(address indexed _spender, uint256 _bp);
    event AddressBpExemption(address indexed _spender, bool _exemption);

    // === VIEWERS ===

    /**
     * @return multiplier - The basis point for a given spender
     */
    function getFeeMultiplier(address _spender) public view returns (uint256 multiplier) {
        if (!_exemption[_spender]) {
            if (_addressBp[_spender] == 0) {
                multiplier = _bp;
            } else {
                multiplier = _addressBp[_spender];
            }
        }
    }

    // === STATE-CHANGING FUNCTIONS ===

    /**
     * @notice The caller of this function must obtain an EIP712 signature from the buyer to receive payment
     * @param _buyer The buyer, this is most likely the user's address
     * @param _token The address of the payment token
     * @param _amount The amount of payment to be collected
     * @param _deadline The timestamp which the transaction reverts
     * @param _signature The EIP712 signature of the buyer
     */
    function collectPayment(
        address _buyer,
        address _token,
        uint256 _amount,
        uint256 _deadline,
        bytes calldata _signature
    ) external override {
        require(_deadline >= block.timestamp, "NFTFairTreasury: EXPIRED");
        Permit memory permit = Permit(_buyer, msg.sender, _token, _amount, nonces[_buyer]++, _deadline);
        bytes32 digest = _getDigest(permit);
        bytes32 message = _generateMessage(digest);
        require(_sigIsValid(_buyer, message, _signature), "NFTFairTreasury: INVALID_SIGNATURE");
        _collectPayment(_buyer, _token, _amount);
    }

    // === ADMIN ===

    /**
     * @notice Sets the default basis point for all spenders
     */
    function setNewBp(uint256 _newBp) external onlyOwner {
        require(_newBp <= 3000, "NFTFairTreasury: New BP can be set to 30% at most");
        _bp = _newBp;
        emit DefaultBpUpdated(_newBp);
    }

    /**
     * @notice Sets the basis point for a given spender
     */
    function setAddressBp(address _spender, uint256 _newBp) external onlyOwner {
        require(_newBp <= 3000, "NFTFairTreasury: New BP can be set to 30% at most");
        _addressBp[_spender] = _newBp;
        emit AddressBpConfigured(_spender, _newBp);
    }

    /**
     * @notice Exempts a given spender from the basis point fee
     */
    function toggleAddressExemption(address _spender) external onlyOwner {

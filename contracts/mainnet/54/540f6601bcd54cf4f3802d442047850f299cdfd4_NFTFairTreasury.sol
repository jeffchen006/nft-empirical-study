    uint256 private _bp; // the default basis point, denominated in 10000, e.g. 100 = 1%
    mapping(address => uint256) private _addressBp;
    mapping(address => bool) private _exemption;
    mapping(address => uint256) public nonces;
    // keccak256(bytes("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"))

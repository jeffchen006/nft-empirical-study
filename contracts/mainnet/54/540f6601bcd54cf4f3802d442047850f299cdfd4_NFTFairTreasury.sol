     */
    function _collectPayment(
        address _buyer,
        address _token,
        uint256 _amount
    ) private {
        uint256 profit = 0;
        uint256 feeMultiplier = getFeeMultiplier(msg.sender);
        if (feeMultiplier > 0) {
            IERC20(_token).safeTransferFrom(_buyer, address(this), _amount);
            profit = (_amount * (feeMultiplier)) / 10000;

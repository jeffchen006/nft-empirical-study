    function claim(uint256[] calldata tokenIds) external {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(exists(tokenIds[i]), "Token doesn't exist");
            emit Transfer(address(0), ownerOf(tokenIds[i]), tokenIds[i]);
        }

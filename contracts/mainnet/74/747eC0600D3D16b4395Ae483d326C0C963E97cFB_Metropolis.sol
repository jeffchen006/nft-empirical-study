pragma solidity 0.8.17;
contract Metropolis
{
    struct Submission { string _Data; address _Submitter; }
    Submission[] public Submissions;
    /**
     * @dev Writes Data To The Blockchain
     */
    function Write(string calldata Data) external { Submissions.push(Submission(Data, msg.sender)); }

    /**
     * @dev Reads A `Submission` At `Index`
     */
    function Read(uint Index) external view returns (Submission memory) { return Submissions[Index]; }

    /**
     * @dev Returns Total Number Of Submissions
     */
    function ReadNumberOfSubmissions() external view returns (uint) { return Submissions.length; }

    /**
     * @dev Returns All Submissions
     */
    function ReadAllIndexes() external view returns (Submission[] memory) 
    {
        Submission[] memory Indexes = new Submission[](Submissions.length);
        for (uint i = 0; i < Submissions.length; i++) { Indexes[i] = Submissions[i]; }
        return Indexes;
    }
    /**
     * @dev Returns `Submissions` As a Raw Array
     */
    function ReadAll() external view returns(Submission[] memory) { return Submissions; }

    /**
     * @dev Returns All Submissions By Address
     */
    function ReadAllSubmissionsByAddress(address Submitter) external view returns (Submission[] memory)
    {
        Submission[] memory SubmissionsByAddress = new Submission[](Submissions.length);
        uint Index;
        for (uint x; x < Submissions.length; x++) { if (Submissions[x]._Submitter == Submitter) { SubmissionsByAddress[Index] = Submissions[x]; Index++; } }
        Submission[] memory SubmissionsByAddressTrimmed = new Submission[](Index);
        for(uint y; y < Index; y++) { SubmissionsByAddressTrimmed[y] = SubmissionsByAddress[y]; }
        return SubmissionsByAddressTrimmed;
    }

    /**
     * @dev Returns All Submission Indexes By Address
     */
    function ReadAllSubmissionIndexesByAddress(address Submitter) external view returns (uint[] memory)
    {
        uint[] memory IndexesByAddress = new uint[](Submissions.length);
        uint Index;
        for (uint x; x < Submissions.length; x++) { if (Submissions[x]._Submitter == Submitter) { IndexesByAddress[Index] = x; Index++; } }
        uint[] memory IndexesByAddressTrimmed = new uint[](Index);
        for(uint y; y < Index; y++) { IndexesByAddressTrimmed[y] = IndexesByAddress[y]; }
        return IndexesByAddressTrimmed;
    }
}
contract halflingsShop is Ownable {
      address public halflingsNft=0x5266c5aca260818Be013C80bd9ed5ba0F3D49070;
      address public halflingsItems=0x867E2f5CBBF0e1214675B577cD13c1D1ccF2B204;
      mapping(address => mapping(uint256 => uint256)) public _userBuyCount;
      mapping(uint256 => uint256) public _mintNftCount;
      mapping(uint256 => bool) public _isNftSellPuse;
      mapping(uint256 => bool) public _isSeedBurn;
      
      bool public _isPause;
      constructor()  {}



      event Withdraw(uint256 amount);
      event contractPauseEvent(bool isPause,address user);
      event PauseNftSell(bool isPause,address user);
      event PauseNftSellEvent(bool isPause,address user);
      event burnseedEvent(bool isPause,address user);
      event _buyNft(address user,uint256 nftid,uint256 amount,address contractAddress);
      event sethalflingsNftEvent(address callerAddress,address halflingsNft);
      event sethalflingsItemsEvent(address callerAddress,address halflingsItems);

    function buyNft(
         uint256 nftid,
         uint256 time,
         uint256 seed,
         uint256 supply,
         uint256 userBuyCount,
         bytes calldata signature
    )external payable
    {
        require(!_isPause, "currently contract is paused");
        require(!_isNftSellPuse[nftid], "currently this nft sell is paused");
        require(!_isSeedBurn[nftid], "wrong seed");
        require(_mintNftCount[nftid]<supply, "supply exceeds");
        require((IERC721(halflingsNft).balanceOf(_msgSender())>0),"Dont have halflings Nft need to buy");
        require(_userBuyCount[_msgSender()][nftid]<userBuyCount, "user buy limit exceed");
        require(time>block.timestamp, "Time over");
        bytes32 hash = keccak256(abi.encodePacked(nftid,time,msg.value,seed,supply,userBuyCount,address(this)));
        bytes32 message = ECDSA.toEthSignedMessageHash(hash);
        address receivedAddress = ECDSA.recover(message, signature);
        require(receivedAddress == owner(), "Invalid signature");
         payable(owner()).transfer(msg.value);
        ERC1155(halflingsItems).mint(_msgSender(),nftid,1);
        _userBuyCount[_msgSender()][nftid]++;
        _mintNftCount[nftid]++;
        emit _buyNft(_msgSender(),nftid,msg.value,address(this));
    }

     // BNB sent by mistake can be returned
    function withdraw() external onlyOwner {
        uint256 balance = address(this).balance;

        payable( msg.sender ).transfer( balance );
        
        emit Withdraw(balance);
    }

    function setHalflingsNft(address _address) external onlyOwner {
        require(_address != address(0));
        halflingsNft = _address;
        emit sethalflingsNftEvent( _msgSender(),_address );
    }

    function setHalflingsItems(address _address) external onlyOwner {
        require(_address != address(0));
        halflingsItems = _address;
        emit sethalflingsItemsEvent( _msgSender(),_address );
    }

    function PauseContract(bool status) external onlyOwner {
        _isPause = status;
        emit contractPauseEvent( status,_msgSender());
    }

    function PauseNftSellFunction(uint256 _nftid,bool status) external onlyOwner {
        _isNftSellPuse[_nftid] = status;
        emit PauseNftSellEvent( status,_msgSender());
    }

    function burnseed(uint256 nftid,bool status) external onlyOwner {
        _isSeedBurn[nftid] = status;
        emit burnseedEvent( status,_msgSender());
    }

}